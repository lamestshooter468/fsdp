<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card card-body">
                <form method="post" action="/user/update/{{user.id}}" class="mb-2">
                    <div class="form-group">
                        <label for="name">Username</label>
                        <input type="text" name="name" class="form-control" placeholder="{{user.name}}" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" name="email" class="form-control" placeholder='{{user.email}}' value="{{email}}">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="password" class="form-control" value="{{password}}">
                    </div>
                    <div class="form-group">
                        <label for="password2">Confirm Password</label>
                        <input type="password" name="password2" class="form-control" value="{{password}}">
                    </div>
                    <button type="submit" class="btn btn-success">Save changes</button>
                </form>
                <form action="/user/{{user.id}}" method="GET">
                    <button type="submit" class="btn btn-secondary">Cancel</button>
                </form>
            </div>
        </div>
    </div>

</div>